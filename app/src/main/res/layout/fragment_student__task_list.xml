<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface_inner_panel"
    android:padding="24dp"
    tools:context=".Student_TaskList">

    <LinearLayout
        android:id="@+id/ll_header_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dela_gothic_one_regular"
            android:text="Task List"
            android:textColor="@color/brand_emerald_dark"
            android:textSize="32sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView55"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:fontFamily="@font/bricolage_body"
                android:text="Currently Due Tasks"
                android:textColor="@color/brand_emerald"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/sp_stl_filter"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/bg_emerald_input"
                android:minWidth="120dp"
                android:paddingHorizontal="12dp"
                android:spinnerMode="dropdown" />
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_stl_AllTask"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"
        android:clipToPadding="false"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_ViewPastTask"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_header_container"
        tools:listitem="@layout/task_viewlayout" />

    <LinearLayout
        android:id="@+id/ll_stl_EmptyTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/btn_ViewPastTask"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_header_container"
        tools:visibility="gone">

        <ImageView
            android:id="@+id/iv_empty_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginBottom="16dp"
            app:srcCompat="@drawable/calendar"
            app:tint="#D1D9D9" />

        <TextView
            android:id="@+id/tv_empty_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/bricolage_condensed_semibold"
            android:text="All Caught Up!"
            android:textColor="@color/brand_emerald_dark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_empty_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bricolage_body"
            android:gravity="center"
            android:text="You have no tasks due right now.\nTake a break and relax."
            android:textColor="#99A3A4"
            android:textSize="14sp" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_ViewPastTask"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@drawable/bg_emerald_btn_primary"
        android:fontFamily="@font/bricolage_condensed_semibold"
        android:text="View Past Tasks"
        android:textAllCaps="false"
        android:textColor="@color/white_soft"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>