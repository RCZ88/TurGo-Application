<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface_inner_panel"
    tools:context=".CreateCourse">

    <LinearLayout
        android:id="@+id/ll_cc_topView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_toolbar_emerald"
        android:elevation="4dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="32dp"
        android:paddingBottom="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">

            <ImageButton
                android:id="@+id/btn_cc_nav_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Exit Course Creation"
                android:padding="12dp"
                android:scaleType="fitCenter"
                android:src="@drawable/arrow_small_left"
                app:tint="@color/brand_emerald_pale" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/spacemono_regular"
                android:text="ADMINISTRATION"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/brand_emerald_pale"
                android:textSize="12sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_cc_ViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/delagothicone_regular"
            android:text="Create Course"
            android:textAlignment="center"
            android:textColor="@color/white_soft"
            android:textSize="32sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/pb_createCoursePB"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="8dp"
            android:paddingVertical="4dp"
            android:progressTint="@color/brand_emerald_light"
            android:progressBackgroundTint="@color/brand_emerald_dark" />

    </LinearLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fcv_CreateCoursePhases"
        android:name="com.example.turgo.cc_CourseInformation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/ll_cc_botButtons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_cc_topView" />

    <LinearLayout
        android:id="@+id/ll_cc_botButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_soft"
        android:elevation="16dp"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp"
        android:paddingVertical="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_CC_back"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_emerald_btn_outlined"
            android:fontFamily="@font/space_mono_regular"
            android:text="@string/previous"
            android:textAllCaps="false"
            android:textColor="@color/brand_emerald"
            app:backgroundTint="@null" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_CC_next"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_emerald_btn_primary"
            android:fontFamily="@font/space_mono_regular"
            android:text="@string/next"
            android:textAllCaps="false"
            android:textColor="@color/white_soft"
            app:backgroundTint="@null" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>