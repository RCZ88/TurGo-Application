<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface_inner_panel"
    android:fillViewport="true"
    tools:context=".cc_SetTeacher">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/textView66"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dela_gothic_one_regular"
            android:text="Assign Teachers"
            android:textColor="@color/brand_emerald_dark"
            android:textSize="28sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/bricolage_body"
            android:text="Manage the teaching staff for this course. Assign lead instructors and assistants."
            android:textColor="@color/brand_emerald"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView84"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/bricolage_condensed_semibold"
            android:letterSpacing="0.05"
            android:text="SELECTED INSTRUCTORS"
            android:textColor="@color/brand_emerald_dark"
            android:textSize="12sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp">

            <TextView
                android:id="@+id/tv_CC_NoTeacherSelected"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/bg_emerald_input"
                android:fontFamily="@font/bricolage_body"
                android:gravity="center"
                android:text="No instructors assigned yet."
                android:textColor="#A0A0A0"
                android:textSize="14sp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/container_selected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_CC_TeacherSelected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="1"
                    tools:listitem="@layout/teacher_display" />
            </LinearLayout>
        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card_surface"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/bricolage_condensed_semibold"
                android:letterSpacing="0.05"
                android:text="TEACHER DIRECTORY"
                android:textColor="@color/brand_emerald_dark"
                android:textSize="12sp" />

            <SearchView
                android:id="@+id/sv_CC_SearchTeacher"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_emerald_input"
                android:drawableStart="@android:drawable/ic_menu_search"
                android:drawablePadding="12dp"
                android:drawableTint="@color/brand_emerald"
                android:fontFamily="@font/bricolage_body"
                android:hint="Search by name..."
                android:inputType="textPersonName"
                android:paddingHorizontal="16dp"
                android:textColor="@color/brand_emerald_dark"
                android:textColorHint="#99A3A4"
                android:textSize="16sp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="200dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginBottom="8dp"
                        android:alpha="0.3"
                        android:src="@android:drawable/ic_menu_search"
                        app:tint="@color/brand_emerald" />

                    <TextView
                        android:id="@+id/tv_CC_NoTeacherAvailable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No teachers found"
                        android:textColor="#A0A0A0" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_CC_SelectTeacher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@android:layout/simple_list_item_2" />

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>