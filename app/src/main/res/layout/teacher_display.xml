<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_TDVH_teacherPFP"
        android:layout_width="75dp"
        android:layout_height="75dp"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20sp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_TDVH_teacherName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teacher Name"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/iv_TDVH_teacherPFP"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_TDVH_teacherSubjectTeached"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:text="Subject Teacher"
            app:layout_constraintStart_toEndOf="@+id/iv_TDVH_teacherPFP"
            app:layout_constraintTop_toBottomOf="@+id/tv_TDVH_teacherName" />
    </LinearLayout>

</LinearLayout>