<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeacherScreen">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nhf_ts_FragmentContainer"
        android:name="com.example.turgo.TeacherDashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/nv_ts_BottomNavigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tb_ts_topAppBar"
        app:defaultNavHost="true"
        app:navGraph="@navigation/teacher_mobile_navigation"
        tools:layout="@layout/fragment_teacher_dashboard"
        />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nv_ts_BottomNavigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/teacher_nav_menu" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_ts_topAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tb_ts_topAppBar"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Teacher's Name" />
</androidx.constraintlayout.widget.ConstraintLayout>