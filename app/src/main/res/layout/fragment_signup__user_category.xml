<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frag_UserCat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface_inner_panel"
    android:fillViewport="true"
    tools:context=".signup_UserCategory">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/bricolage_grotesque_bold"
        android:text="Tell us about yourself!"
        android:textAlignment="center"
        android:textColor="@color/brand_emerald_dark"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/bricolage_body"
        android:text="Select the option that best describes you:"
        android:textAlignment="center"
        android:textColor="@color/brand_emerald"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_emerald_card"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="20dp">

        <RadioGroup
            android:id="@+id/rg_userOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rb_StudentOpt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_emerald_input"
                android:buttonTint="@color/brand_emerald"
                android:fontFamily="@font/bricolage_grotesque_bold"
                android:layoutDirection="rtl"
                android:padding="16dp"
                android:text="Student"
                android:textAlignment="textStart"
                android:textColor="@color/brand_emerald_dark"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/rb_TeacherOpt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_emerald_input"
                android:buttonTint="@color/brand_emerald"
                android:fontFamily="@font/bricolage_grotesque_bold"
                android:layoutDirection="rtl"
                android:padding="16dp"
                android:text="Teacher"
                android:textAlignment="textStart"
                android:textColor="@color/brand_emerald_dark"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/rb_AdminOpt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_emerald_input"
                android:buttonTint="@color/brand_emerald"
                android:fontFamily="@font/bricolage_grotesque_bold"
                android:layoutDirection="rtl"
                android:padding="16dp"
                android:text="Admin"
                android:textAlignment="textStart"
                android:textColor="@color/brand_emerald_dark"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/rb_ParentOpt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_emerald_input"
                android:buttonTint="@color/brand_emerald"
                android:fontFamily="@font/bricolage_grotesque_bold"
                android:layoutDirection="rtl"
                android:padding="16dp"
                android:text="Parent"
                android:textAlignment="textStart"
                android:textColor="@color/brand_emerald_dark"
                android:textSize="16sp" />

        </RadioGroup>
    </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
