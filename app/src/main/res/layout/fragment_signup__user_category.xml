<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frag_UserCat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup_UserCategory">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:fontFamily="sans-serif"
        android:text="Tell us about yourself!"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Select Type of User Shown Below:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <RadioGroup
        android:id="@+id/rg_userOptions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <RadioButton
            android:id="@+id/rb_StudentOpt"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="Student" />

        <RadioButton
            android:id="@+id/rb_TeacherOpt"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="Teacher" />

        <RadioButton
            android:id="@+id/rb_AdminOpt"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="Admin" />

        <RadioButton
            android:id="@+id/rb_ParentOpt"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="Parent" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>