<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface_inner_panel"
    tools:context=".TeacherCourseTasksFragment">

    <LinearLayout
        android:id="@+id/ll_TCTS_Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bricolage_body"
            android:text="Course Tasks"
            android:textColor="@color/brand_emerald"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_TCTS_CourseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dela_gothic_one_regular"
            android:textColor="@color/brand_emerald_dark"
            android:textSize="24sp"
            tools:text="Advanced UX Design" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_TCTS_Tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/ll_TCTS_Header">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_TCTS_Active"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:text="Active"
            android:textAllCaps="false"
            app:backgroundTint="@color/brand_emerald"
            app:cornerRadius="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_TCTS_Past"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:text="Past"
            android:textAllCaps="false"
            app:cornerRadius="12dp"
            app:strokeColor="@color/brand_emerald_pale" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_TCTS_Tabs">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_TCTS_TaskList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/task_viewlayout" />

        <TextView
            android:id="@+id/tv_TCTS_Empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/space_mono_regular"
            android:gravity="center"
            android:text="No active tasks yet."
            android:textColor="@color/brand_emerald_dark"
            android:visibility="gone" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

