<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frag_PasswordSetup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface_inner_panel"
    android:fillViewport="true"
    tools:context=".signup_PasswordSetup">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/dela_gothic_one_regular"
        android:text="Secure your Account"
        android:textAlignment="center"
        android:textColor="@color/brand_emerald_dark"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/bricolage_body"
        android:text="Choose a strong password to continue"
        android:textColor="@color/brand_emerald"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_emerald_card"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ip_Password"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Password"
            android:textColorHint="@color/brand_emerald"
            app:boxBackgroundColor="@color/white_soft"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxStrokeColor="@color/brand_emerald"
            app:endIconDrawable="@drawable/eye"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/brand_emerald"
            app:hintTextColor="@color/brand_emerald"
            app:startIconDrawable="@drawable/lock"
            app:startIconTint="@color/brand_emerald">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tie_Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bricolage_body"
                android:inputType="textPassword"
                android:paddingStart="60dp"
                android:textColor="@color/black_soft" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ip_ConfirmPassword"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:hint="Confirm Password"
            android:textColorHint="@color/brand_emerald"
            app:boxBackgroundColor="@color/white_soft"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxStrokeColor="@color/brand_emerald"
            app:endIconDrawable="@drawable/eye"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/brand_emerald"
            app:hintTextColor="@color/brand_emerald"
            app:startIconDrawable="@drawable/lock"
            app:startIconTint="@color/brand_emerald">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tie_ConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bricolage_body"
                android:inputType="textPassword"
                android:paddingStart="60dp"
                android:textColor="@color/black_soft" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/bricolage_grotesque_bold"
            android:text="Password Requirements:"
            android:textColor="@color/brand_emerald_dark"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/ll_PasswordChecklist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:buttonTint="@color/brand_emerald"
                android:clickable="false"
                android:fontFamily="@font/bricolage_body"
                android:minHeight="32dp"
                android:text="Lowercase character required"
                android:textColor="@color/brand_emerald"
                android:textSize="13sp" />

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:buttonTint="@color/brand_emerald"
                android:clickable="false"
                android:fontFamily="@font/bricolage_body"
                android:minHeight="32dp"
                android:text="Uppercase character required"
                android:textColor="@color/brand_emerald"
                android:textSize="13sp" />

            <CheckBox
                android:id="@+id/checkBox3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:buttonTint="@color/brand_emerald"
                android:clickable="false"
                android:fontFamily="@font/bricolage_body"
                android:minHeight="32dp"
                android:text="Numeric character required"
                android:textColor="@color/brand_emerald"
                android:textSize="13sp" />

            <CheckBox
                android:id="@+id/checkBox4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:buttonTint="@color/brand_emerald"
                android:clickable="false"
                android:fontFamily="@font/bricolage_body"
                android:minHeight="32dp"
                android:text="Special character required"
                android:textColor="@color/brand_emerald"
                android:textSize="13sp" />

            <CheckBox
                android:id="@+id/checkBox5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/brand_emerald"
                android:clickable="false"
                android:fontFamily="@font/bricolage_body"
                android:minHeight="32dp"
                android:text="Length between 6-30 characters"
                android:textColor="@color/brand_emerald"
                android:textSize="13sp" />

        </LinearLayout>
    </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
