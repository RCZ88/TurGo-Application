<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frag_TeacherDetails"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface_inner_panel"
    android:fillViewport="true"
    tools:context=".TeacherSignUpFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv_select_subjects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/bricolage_grotesque_bold"
            android:text="Teacher Profile"
            android:textAlignment="center"
            android:textColor="@color/brand_emerald_dark"
            android:textSize="28sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/bricolage_body"
            android:text="Select the subjects you are qualified to teach"
            android:textAlignment="center"
            android:textColor="@color/brand_emerald"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_emerald_card"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/bricolage_grotesque_bold"
                android:text="Available Subjects"
                android:textColor="@color/brand_emerald_dark"
                android:textSize="16sp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_emerald_input">

                <Spinner
                    android:id="@+id/spinner_subjects"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:spinnerMode="dropdown" />
            </FrameLayout>

            <Button
                android:id="@+id/btn_add_subject"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_emerald_btn_outlined"
                android:fontFamily="@font/bricolage_grotesque_bold"
                android:onClick="addSubject"
                android:text="+ Add Subject"
                android:textAllCaps="false"
                android:textColor="@color/brand_emerald"
                android:textSize="16sp"
                app:backgroundTint="@null" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="24dp"
                android:alpha="0.4"
                android:background="@color/brand_emerald_pale" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_selected_subjects_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/bricolage_grotesque_bold"
                    android:text="Selected Subjects"
                    android:textColor="@color/brand_emerald_dark"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current List"
                    android:textColor="@color/brand_emerald"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_emerald_input"
                android:minHeight="150dp"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/listview_selected_subjects"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:divider="@color/brand_emerald_pale"
                    android:dividerHeight="1dp"
                    android:nestedScrollingEnabled="true"
                    tools:listitem="@android:layout/simple_list_item_1" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/bricolage_body"
                android:text="* You must select at least one subject"
                android:textAlignment="center"
                android:textColor="@color/brand_emerald"
                android:textSize="12sp"
                android:textStyle="italic" />

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>