<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_page_gradient"
    tools:context=".Student_Dashboard">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- ===================== HERO: WEEKLY PROGRESS ===================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_hero_progress_dark_gradient"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView29"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bricolage_grotesque_heading"
                        android:letterSpacing="0.02"
                        android:text="This Week's Progress"
                        android:textColor="@color/white_soft"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/space_mono_regular"
                        android:text="Track your momentum at a glance"
                        android:textColor="#CCFFFFFF"
                        android:textSize="12sp" />
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/frameLayout10"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="12dp">

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/pb_WeeksProgress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:indeterminate="false"
                        app:indicatorColor="@color/brand_emerald_light"
                        app:indicatorInset="8dp"
                        app:indicatorSize="120dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:trackColor="#33FFFFFF"
                        app:trackThickness="10dp" />

                    <TextView
                        android:id="@+id/tv_SD_WeekProgressPercent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bricolage_grotesque_bold"
                        android:text="0%"
                        android:textColor="@color/white_soft"
                        android:textSize="24sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <!-- ===================== UPCOMING CLASS ===================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_dashboard_card_upcoming"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/bricolage_subheading"
                    android:letterSpacing="0.01"
                    android:text="Upcoming Class"
                    android:textAlignment="viewStart"
                    android:textColor="@color/brand_emerald_dark"
                    android:textSize="26sp" />

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/fcv_UpcomingClass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:visibility="gone"
                    tools:layout="@layout/fragment_meeting_display" />

                <TextView
                    android:id="@+id/tv_SD_ScheduleEmpty"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@drawable/bg_status_panel_soft"
                    android:fontFamily="@font/space_mono_regular"
                    android:gravity="center"
                    android:letterSpacing="0.01"
                    android:text="No Upcoming Schedule!"
                    android:textColor="@color/brand_emerald_dark"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/ib_SD_ShowDetails"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/transparent"
                    android:scaleType="center"
                    android:src="@drawable/caret_down"
                    app:tint="@color/brand_emerald" />
            </LinearLayout>

            <!-- ===================== GRID: MEETINGS + ATTENDANCE ===================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- MEETINGS CARD -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_dashboard_card_metrics"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/textView23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/bricolage_grotesque_heading"
                        android:letterSpacing="0.01"
                        android:text="Completed This Week"
                        android:textAlignment="center"
                        android:textColor="@color/brand_emerald_dark"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_SD_MeetingsCompletedCount"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal|bottom"
                        android:text="0"
                        android:textColor="@color/brand_emerald"
                        android:textSize="64sp"
                        android:fontFamily="@font/bricolage_grotesque_heading"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_SD_NoMeetingsCompleted"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/bg_status_panel_soft"
                        android:fontFamily="@font/space_mono_regular"
                        android:gravity="center"
                        android:letterSpacing="0.01"
                        android:padding="4dp"
                        android:text="meetings completed this week"
                        android:textColor="@color/brand_emerald_dark"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- ATTENDANCE CARD -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_dashboard_card_metrics"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/textView24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bricolage_grotesque_heading"
                        android:letterSpacing="0.01"
                        android:text="Attendance"
                        android:textColor="@color/brand_emerald_dark"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/textView25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/space_mono_regular"
                        android:letterSpacing="0.01"
                        android:text="Scan QR"
                        android:textColor="@color/black_soft"
                        android:textSize="14sp" />

                    <ImageButton
                        android:id="@+id/btn_ScanQRAttendance"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/bg_qr_button"
                        android:contentDescription="Scan an Attendance QR Code"
                        android:onClick="attendMeetingScan"
                        android:scaleType="centerInside"
                        android:src="@drawable/qr_scan"
                        app:tint="@color/white_soft" />
                </LinearLayout>
            </LinearLayout>

            <!-- ===================== TASKS ===================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_dashboard_card_tasks"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/bricolage_grotesque_heading"
                    android:letterSpacing="0.01"
                    android:text="Tasks To Do"
                    android:textColor="@color/brand_emerald_dark"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/tv_SD_NoTask"
                    android:layout_width="match_parent"
                    android:layout_height="88dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_inner_panel"
                    android:fontFamily="@font/space_mono_regular"
                    android:gravity="center"
                    android:letterSpacing="0.01"
                    android:text="All Clear, No Task!"
                    android:textColor="@color/black_soft"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/ll_SD_TaskToDo"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_task_carousel"
                    android:gravity="center_vertical"
                    android:minHeight="124dp"
                    android:orientation="horizontal"
                    android:padding="6dp">

                    <ImageButton
                        android:id="@+id/ib_PrevTask"
                        android:layout_width="24dp"
                        android:layout_height="112dp"
                        android:background="@color/transparent"
                        android:contentDescription="Previous Task"
                        android:scaleType="fitCenter"
                        android:src="@drawable/caret_left"
                        app:tint="@color/brand_emerald" />

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/vp2_TasksContainer"
                        android:layout_width="0dp"
                        android:layout_height="112dp"
                        android:layout_weight="1" />

                    <ImageButton
                        android:id="@+id/ib_NextTask"
                        android:layout_width="24dp"
                        android:layout_height="112dp"
                        android:background="@color/transparent"
                        android:contentDescription="Next Task"
                        android:scaleType="fitCenter"
                        android:src="@drawable/caret_right"
                        app:tint="@color/brand_emerald" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
