<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brand_emerald_pale"
    tools:context=".Student_Dashboard">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- ===================== HERO: WEEKLY PROGRESS ===================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_hero_progress"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bricolage_grotesque_heading"
                    android:letterSpacing="0.02"
                    android:text="This Week's Progress"
                    android:textColor="@color/brand_emerald_dark"
                    android:textSize="36dp"
                    android:textStyle="normal|bold" />

                <ProgressBar
                    android:id="@+id/pb_WeeksProgress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:layout_marginTop="16dp"
                    android:max="100"
                    android:progress="0"
                    android:progressTint="@color/brand_emerald_light"
                    android:backgroundTint="@color/progress_background" />
            </LinearLayout>

            <!-- ===================== UPCOMING CLASS ===================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_card_surface"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upcoming Class"
                    android:textAlignment="viewStart"
                    android:textColor="@color/brand_emerald_dark"
                    android:textSize="26sp"
                    android:fontFamily="@font/bricolage_subheading"
                    android:letterSpacing="0.01" />

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/fcv_UpcomingClass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone"
                    tools:layout="@layout/fragment_meeting_display" />

                <TextView
                    android:id="@+id/tv_SD_ScheduleEmpty"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@drawable/bg_inner_panel"
                    android:gravity="center"
                    android:text="No Upcoming Schedule!"
                    android:textColor="@color/black_soft"
                    android:textSize="16sp"
                    android:fontFamily="@font/space_mono_regular"
                    android:letterSpacing="0.01" />

                <ImageButton
                    android:id="@+id/ib_SD_ShowDetails"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/transparent"
                    android:scaleType="center"
                    android:src="@drawable/caret_down"
                    app:tint="@color/brand_emerald" />
            </LinearLayout>

            <!-- ===================== GRID: MEETINGS + ATTENDANCE ===================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- MEETINGS CARD -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_card_surface"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/textView23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/bricolage_grotesque_heading"
                        android:letterSpacing="0.01"
                        android:text="Meetings Completed"
                        android:textColor="@color/brand_emerald_dark"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/tv_SD_NoMeetingsCompleted"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:background="@drawable/bg_inner_panel"
                        android:gravity="center"
                        android:text="No Meeting Completed."
                        android:textColor="@color/black_soft"
                        android:textSize="15sp"
                        android:fontFamily="@font/space_mono_regular"
                        android:letterSpacing="0.01" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_CourseCompleted"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:background="@drawable/bg_inner_panel"
                        android:visibility="gone" />
                </LinearLayout>

                <!-- ATTENDANCE CARD -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_card_surface"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/textView24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bricolage_grotesque_heading"
                        android:letterSpacing="0.01"
                        android:text="Attendance"
                        android:textColor="@color/brand_emerald_dark"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/textView25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/space_mono_regular"
                        android:letterSpacing="0.01"
                        android:text="Scan QR"
                        android:textColor="@color/black_soft"
                        android:textSize="14sp" />

                    <ImageButton
                        android:id="@+id/btn_ScanQRAttendance"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/bg_qr_button"
                        android:contentDescription="Scan an Attendance QR Code"
                        android:onClick="attendMeetingScan"
                        android:scaleType="centerInside"
                        android:src="@drawable/qr_scan"
                        app:tint="@color/white_soft" />
                </LinearLayout>
            </LinearLayout>

            <!-- ===================== TASKS ===================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_surface"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bricolage_grotesque_heading"
                    android:letterSpacing="0.01"
                    android:text="Tasks To Do"
                    android:textColor="@color/brand_emerald_dark"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/tv_SD_NoTask"
                    android:layout_width="match_parent"
                    android:layout_height="88dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_inner_panel"
                    android:gravity="center"
                    android:text="All Clear, No Task!"
                    android:textColor="@color/black_soft"
                    android:textSize="15sp"
                    android:fontFamily="@font/space_mono_regular"
                    android:letterSpacing="0.01"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/ll_SD_TaskToDo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_task_carousel"
                    android:orientation="horizontal"
                    android:padding="6dp">

                    <ImageButton
                        android:id="@+id/ib_PrevTask"
                        android:layout_width="48dp"
                        android:layout_height="96dp"
                        android:background="@color/transparent"
                        android:contentDescription="Previous Task"
                        android:scaleType="center"
                        android:src="@drawable/caret_left"
                        app:tint="@color/brand_emerald" />

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/vp2_TasksContainer"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageButton
                        android:id="@+id/ib_NextTask"
                        android:layout_width="48dp"
                        android:layout_height="96dp"
                        android:background="@color/transparent"
                        android:contentDescription="Next Task"
                        android:scaleType="center"
                        android:src="@drawable/caret_right"
                        app:tint="@color/brand_emerald" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
