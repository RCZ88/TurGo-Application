<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface_inner_panel"
    android:paddingTop="8dp"
    android:paddingBottom="80dp"
    tools:context=".Student_ExploreCourse">

    <LinearLayout
        android:id="@+id/ll_explore_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/bg_emerald_card"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="14dp"
        android:paddingTop="12dp"
        android:paddingEnd="14dp"
        android:paddingBottom="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dela_gothic_one_regular"
            android:text="Explore Courses"
            android:textColor="@color/brand_emerald_dark"
            android:textSize="26dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/bricolage_body"
            android:text="Find classes that match your interests"
            android:textColor="@color/brand_emerald"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_exploreCourses"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_card_surface"
        android:clipToPadding="false"
        android:padding="8dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@id/tv_exploreCourseEmpty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_explore_header"
        tools:itemCount="3"
        tools:listitem="@layout/course_display" />

    <!-- Empty State -->
    <TextView
        android:id="@+id/tv_exploreCourseEmpty"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="32dp"
        android:background="@color/white_soft"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:letterSpacing="0.01"
        android:padding="48dp"
        android:text="No courses to explore!\nPlease update your course interests."
        android:textAlignment="center"
        android:textColor="@color/black_soft"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_exploreCourses" />

</androidx.constraintlayout.widget.ConstraintLayout>
