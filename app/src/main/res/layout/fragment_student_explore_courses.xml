<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brand_emerald_pale"
    android:paddingTop="16dp"
    android:paddingBottom="80dp"
    tools:context=".Student_ExploreCourse">

    <!-- Title Container -->
    <LinearLayout
        android:id="@+id/titleContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/compass"
            android:tint="@color/brand_emerald_dark"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/tv_Explore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dela_gothic_one_regular"
            android:letterSpacing="0.02"
            android:text="Explore"
            android:textColor="@color/brand_emerald_dark"
            android:textSize="32sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_exploreCourses"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_card_surface"
        android:clipToPadding="false"
        android:padding="8dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@id/tv_exploreCourseEmpty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleContainer"
        tools:itemCount="3"
        tools:listitem="@layout/course_display" />

    <!-- Empty State -->
    <TextView
        android:id="@+id/tv_exploreCourseEmpty"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="32dp"
        android:background="@color/white_soft"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:letterSpacing="0.01"
        android:padding="48dp"
        android:text="No courses to explore!\nPlease update your course interests."
        android:textAlignment="center"
        android:textColor="@color/black_soft"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_exploreCourses" />

</androidx.constraintlayout.widget.ConstraintLayout>
