<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface_inner_panel"
    android:fillViewport="true"
    tools:context=".cc_PriceEnrollment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/textView71"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dela_gothic_one_regular"
            android:text="Pricing &amp; Enrollment"
            android:textColor="@color/brand_emerald_dark"
            android:textSize="28sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/bricolage_body"
            android:text="Set your course rates and define the rules for student admission and billing."
            android:textColor="@color/brand_emerald"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_card_surface"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/bricolage_condensed_semibold"
                android:letterSpacing="0.05"
                android:text="FINANCIAL STRUCTURE"
                android:textColor="@color/brand_emerald_dark"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/bricolage_body"
                        android:text="Hourly Rate"
                        android:textColor="@color/brand_emerald_dark"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/etn_CC_HourlyCost"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_emerald_input"
                        android:drawableStart="@android:drawable/ic_menu_edit"
                        android:drawableTint="@color/brand_emerald"
                        android:drawablePadding="12dp"
                        android:fontFamily="@font/space_mono_regular"
                        android:hint="0.00"
                        android:inputType="numberDecimal"
                        android:paddingHorizontal="16dp"
                        android:textColor="@color/brand_emerald_dark" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/bricolage_body"
                        android:text="Base Fee"
                        android:textColor="@color/brand_emerald_dark"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/etn_CC_BaseCost"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_emerald_input"
                        android:drawableStart="@android:drawable/ic_menu_edit"
                        android:drawableTint="@color/brand_emerald"
                        android:drawablePadding="12dp"
                        android:fontFamily="@font/space_mono_regular"
                        android:hint="0.00"
                        android:inputType="numberDecimal"
                        android:paddingHorizontal="16dp"
                        android:textColor="@color/brand_emerald_dark" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/bricolage_body"
                    android:text="Monthly Discount (%)"
                    android:textColor="@color/brand_emerald_dark"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etn_MonthlyDiscount"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_emerald_input"
                    android:drawableStart="@android:drawable/ic_menu_info_details"
                    android:drawableTint="@color/brand_emerald"
                    android:drawablePadding="12dp"
                    android:fontFamily="@font/space_mono_regular"
                    android:hint="e.g. 15"
                    android:inputType="number"
                    android:paddingHorizontal="16dp"
                    android:textColor="@color/brand_emerald_dark" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card_surface"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/bricolage_condensed_semibold"
                android:letterSpacing="0.05"
                android:text="ENROLLMENT RULES"
                android:textColor="@color/brand_emerald_dark"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/bricolage_grotesque_bold"
                android:text="Session Formats"
                android:textColor="@color/brand_emerald"
                android:textSize="16sp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/sw_CC_GroupType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bricolage_body"
                android:minHeight="48dp"
                android:text="Allow Group Sessions"
                android:textColor="@color/brand_emerald_dark"
                android:textSize="16sp"
                app:thumbTint="@color/white"
                app:trackTint="@color/brand_emerald" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/sw_CC_PrivateType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bricolage_body"
                android:minHeight="48dp"
                android:text="Allow Private Sessions"
                android:textColor="@color/brand_emerald_dark"
                android:textSize="16sp"
                app:thumbTint="@color/white"
                app:trackTint="@color/brand_emerald" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="16dp"
                android:background="#E0E6E4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/bricolage_grotesque_bold"
                android:text="Billing &amp; Automation"
                android:textColor="@color/brand_emerald"
                android:textSize="16sp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/sw_CC_PerMonth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bricolage_body"
                android:minHeight="48dp"
                android:text="Enable Monthly Billing"
                android:textColor="@color/brand_emerald_dark"
                android:textSize="16sp"
                app:thumbTint="@color/white"
                app:trackTint="@color/brand_emerald" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/sw_CC_PerMeeting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bricolage_body"
                android:minHeight="48dp"
                android:text="Enable Per-Meeting Billing"
                android:textColor="@color/brand_emerald_dark"
                android:textSize="16sp"
                app:thumbTint="@color/white"
                app:trackTint="@color/brand_emerald" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/cb_CC_AutoAccept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/bricolage_body"
                android:minHeight="48dp"
                android:text="Auto-Accept New Students"
                android:textColor="@color/brand_emerald_dark"
                android:textSize="16sp"
                app:thumbTint="@color/brand_emerald_dark"
                app:trackTint="@color/brand_emerald_light" />

        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>