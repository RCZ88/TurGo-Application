<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:strokeColor="@color/brand_emerald_pale"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/iv_file_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/book"
            app:tint="@color/brand_emerald"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_sd_FileName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="middle"
            android:fontFamily="@font/bricolage_grotesque_bold"
            android:maxLines="1"
            android:textColor="@color/brand_emerald_dark"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_sd_UploadDateTime"
            app:layout_constraintEnd_toStartOf="@+id/tv_sd_submissionStatus"
            app:layout_constraintStart_toEndOf="@+id/iv_file_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="assignment_final_v2.pdf" />

        <TextView
            android:id="@+id/tv_sd_UploadDateTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/space_mono_regular"
            android:textColor="#99A3A4"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_sd_submissionStatus"
            app:layout_constraintStart_toStartOf="@+id/tv_sd_FileName"
            app:layout_constraintTop_toBottomOf="@+id/tv_sd_FileName"
            tools:text="Selected: 7 July 2077 â€¢ 7:07 PM" />

        <TextView
            android:id="@+id/tv_sd_submissionStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:background="@drawable/bg_status_badge_late"
            android:fontFamily="@font/bricolage_condensed_semibold"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:text="LATE"
            android:textAllCaps="true"
            android:textColor="#C0392B"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_sd_RemoveFile"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_sd_RemoveFile"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/trash_invese"
            app:tint="#E74C3C"
            tools:ignore="ContentDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>