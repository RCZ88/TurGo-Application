<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_MA_rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface_inner_panel"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout49"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/bg_emerald_card"
        android:elevation="8dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingVertical="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView9">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/bricolage_grotesque_48pt_semi_bold"
            android:text="Get Back to Learning"
            android:textColor="@color/brand_emerald_dark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_ToSignIn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/bg_emerald_btn_primary"
            android:fontFamily="@font/spacemono_bold"
            android:onClick="toSignInActivity"
            android:text="Sign In"
            android:textAllCaps="false"
            android:textColor="@color/white_soft"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="@null" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="32dp"
            android:alpha="0.3"
            android:background="@color/qr_button_bg" />

        <TextView
            android:id="@+id/textView140"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/bricolage_grotesque_48pt_semi_bold"
            android:text="New to TurGo?"
            android:textColor="@color/brand_emerald"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_ToSignUp"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_emerald_btn_outlined"
            android:fontFamily="@font/space_mono_regular"
            android:onClick="toSignUpActivity"
            android:text="Create Account"
            android:textAllCaps="false"
            android:textColor="@color/brand_emerald"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="@null" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="360dp"
        android:layout_height="135dp"
        android:layout_marginTop="84dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/turgo_icon_w_text_nobg" />

</androidx.constraintlayout.widget.ConstraintLayout>