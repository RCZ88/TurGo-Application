<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/surface_card"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:strokeColor="@color/brand_emerald_light"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top Row: Icon + Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_cdnf_CourseIcon"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:scaleType="centerCrop"
                android:src="@drawable/piano"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/tv_cdnf_CourseTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="@font/bricolage_grotesque_bold"
                android:maxLines="2"
                android:text="Course Title"
                android:textColor="@color/brand_emerald_dark"
                android:textSize="28dp" />
        </LinearLayout>

        <!-- Bottom Row: Teacher + Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Teacher Group -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ivTeacherIcon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/chalkboard_user"
                    android:contentDescription="@null" />

                <TextView
                    android:id="@+id/tv_cdnf_TeacherName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:fontFamily="@font/spacemono_regular"
                    android:text="Teacher Name"
                    android:textColor="@color/black_soft"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Spacer -->
            <View
                android:layout_width="16dp"
                android:layout_height="0dp" />

            <!-- Date Group -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_cdnf_dateIcon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/calendar"
                    android:contentDescription="@null" />

                <TextView
                    android:id="@+id/tv_cdnf_MeetingDates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/space_mono_regular"
                    android:maxLines="1"
                    android:text="Next Meeting Date"
                    android:textColor="@color/black_soft"
                    android:textSize="13sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
