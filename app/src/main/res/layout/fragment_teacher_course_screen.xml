<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface_inner_panel"
    tools:context=".TeacherCourseScreen">

    <LinearLayout
        android:id="@+id/ll_header_tcs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bricolage_body"
            android:text="Managing Course"
            android:textColor="@color/brand_emerald"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_TCS_CourseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dela_gothic_one_regular"
            android:text="Advanced UX Design"
            android:textColor="@color/brand_emerald_dark"
            android:textSize="24sp" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_header_tcs">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/bricolage_condensed_semibold"
                android:letterSpacing="0.1"
                android:text="ENROLLED STUDENTS"
                android:textColor="@color/brand_emerald_dark"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_TCS_SelectedCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/space_mono_regular"
                android:text="0 students selected"
                android:textColor="@color/brand_emerald"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_emerald_input"
                android:backgroundTint="#F2F7F6"
                android:orientation="vertical"
                android:padding="12dp">

                <SearchView
                    android:id="@+id/sv_TCS_SearchStudent"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/bg_emerald_input"
                    android:iconifiedByDefault="false"
                    android:queryBackground="@android:color/transparent"
                    android:queryHint="Search student name..." />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:layout_marginTop="12dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_TCS_StudentList"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clipToPadding="false"
                        android:visibility="visible"
                        tools:listitem="@layout/student_teachercourse_viewholder" />

                    <LinearLayout
                        android:id="@+id/ll_TCS_EmptyState"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:alpha="0.3"
                            app:srcCompat="@drawable/school"
                            app:tint="@color/brand_emerald" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/bricolage_condensed_semibold"
                            android:text="No students found"
                            android:textColor="@color/brand_emerald_dark"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/bricolage_body"
                            android:text="Try a different search or check enrollment."
                            android:textColor="#889997"
                            android:textSize="12sp" />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/bricolage_condensed_semibold"
                android:letterSpacing="0.1"
                android:text="COURSE ACTIONS"
                android:textColor="@color/brand_emerald_dark"
                android:textSize="12sp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:rowCount="2">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_TCS_AssignTask"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_margin="4dp"
                    android:layout_columnWeight="1"
                    android:background="@drawable/bg_emerald_btn_primary"
                    android:fontFamily="@font/dela_gothic_one_regular"
                    android:text="Assign\nTask"
                    android:textAllCaps="false"
                    android:textColor="@color/white_soft"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_TCS_AddAgenda"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_margin="4dp"
                    android:layout_columnWeight="1"
                    android:background="@drawable/bg_emerald_input"
                    android:fontFamily="@font/bricolage_condensed_semibold"
                    android:text="Add\nAgenda"
                    android:textAllCaps="false"
                    android:textColor="@color/brand_emerald_dark" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_TCS_ViewSchedule"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_marginEnd="4dp"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_emerald_input"
                    android:fontFamily="@font/bricolage_condensed_semibold"
                    android:text="View Class Schedule"
                    android:textAllCaps="false"
                    android:textColor="@color/brand_emerald" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_TCS_ViewTasks"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="4dp"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_emerald_input"
                    android:fontFamily="@font/bricolage_condensed_semibold"
                    android:text="View Tasks"
                    android:textAllCaps="false"
                    android:textColor="@color/brand_emerald" />
            </GridLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
