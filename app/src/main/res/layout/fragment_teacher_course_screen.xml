<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeacherCourseScreen"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_TCS_CourseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:text=" Course Name"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/linearLayout47"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearLayout46"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView123"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="Select Students"
                        android:textSize="20dp" />

                    <SearchView
                        android:id="@+id/sv_TCS_SearchStudent"
                        android:layout_width="233dp"
                        android:layout_height="33dp"
                        android:background="@drawable/edittext_border" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_TCS_StudentList"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/recycler_view_border"
                    tools:itemCount="1"
                    tools:listitem="@layout/student_teachercourse_viewholder" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="29dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView125"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Actions"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="412dp"
                    android:layout_height="221dp"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_TCS_AssignTask"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_margin="10dp"
                        android:paddingVertical="8dp"
                        android:text="Assign Task" />

                    <Button
                        android:id="@+id/btn_TCS_AddAgenda"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_margin="10dp"
                        android:paddingVertical="8dp"
                        android:text="View Schedule" />

                    <Button
                        android:id="@+id/btn_TCS_ViewSchedule"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_margin="10dp"
                        android:paddingVertical="8dp"
                        android:text="Add Agenda" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>