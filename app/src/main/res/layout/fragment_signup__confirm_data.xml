<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAF9"
    android:fillViewport="true"
    tools:context=".signup_ConfirmData">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/dela_gothic_one_regular"
            android:text="Confirm Choices"
            android:textColor="@color/brand_emerald_dark"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/plus_jakarta_sans"
            android:gravity="center"
            android:text="Almost there! Double-check your details below to ensure everything is perfect."
            android:textColor="#667085"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView13" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_SummaryContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:strokeColor="#E4E7EC"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@+id/textView14">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/plus_jakarta_sans"
                    android:text="REGISTRATION SUMMARY"
                    android:textColor="@color/brand_emerald"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_qr_button"
                    android:backgroundTint="#F9FAFB"
                    android:orientation="vertical"
                    android:paddingHorizontal="28dp"
                    android:paddingVertical="28dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/plus_jakarta_sans"
                        android:text="Account Type"
                        android:textColor="#98A2B3"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_CD_AccountType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/jetbrains_mono"
                        android:text="..."
                        android:textColor="@color/brand_emerald_dark"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/plus_jakarta_sans"
                        android:text="Full Name"
                        android:textColor="#98A2B3"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_CD_FullName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/jetbrains_mono"
                        android:text="..."
                        android:textColor="@color/brand_emerald_dark"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/plus_jakarta_sans"
                        android:text="Nickname"
                        android:textColor="#98A2B3"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_CD_Nickname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/jetbrains_mono"
                        android:text="..."
                        android:textColor="@color/brand_emerald_dark"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/plus_jakarta_sans"
                        android:text="Date of Birth"
                        android:textColor="#98A2B3"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_CD_BirthDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/jetbrains_mono"
                        android:text="..."
                        android:textColor="@color/brand_emerald_dark"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/plus_jakarta_sans"
                        android:text="Gender"
                        android:textColor="#98A2B3"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_CD_Gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/jetbrains_mono"
                        android:text="..."
                        android:textColor="@color/brand_emerald_dark"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/plus_jakarta_sans"
                        android:text="Email"
                        android:textColor="#98A2B3"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_CD_Email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/jetbrains_mono"
                        android:text="..."
                        android:textColor="@color/brand_emerald_dark"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/plus_jakarta_sans"
                        android:text="Phone Number"
                        android:textColor="#98A2B3"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_CD_Phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/jetbrains_mono"
                        android:text="..."
                        android:textColor="@color/brand_emerald_dark"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/plus_jakarta_sans"
                        android:text="Additional Info"
                        android:textColor="#98A2B3"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_CD_Additional"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/jetbrains_mono"
                        android:text="..."
                        android:textColor="@color/brand_emerald_dark"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/plus_jakarta_sans"
                    android:text="By clicking Sign Up, you agree to our terms of service and privacy policy."
                    android:textColor="#98A2B3"
                    android:textSize="11sp"
                    android:gravity="center" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <Button
            android:id="@+id/btn_SignUp"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/lexend"
            android:text="Complete Sign Up"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:backgroundTint="@color/brand_emerald"
            app:cornerRadius="16dp"
            app:elevation="4dp"
            app:layout_constraintTop_toBottomOf="@+id/cv_SummaryContainer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
