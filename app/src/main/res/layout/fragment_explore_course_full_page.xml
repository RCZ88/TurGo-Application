<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brand_emerald_pale"
    tools:context=".CourseExploreFullPage">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:theme="@style/ThemeOverlay.Material3.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/brand_emerald"
            app:expandedTitleGravity="bottom|start"
            app:expandedTitleMarginBottom="16dp"
            app:expandedTitleMarginStart="20dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:titleEnabled="false">

            <!-- Background Image -->
            <ImageView
                android:id="@+id/iv_ecfp_courseWallpaper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                app:srcCompat="@drawable/banner_blue" />

            <!-- Overlay gradient for text legibility -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_collapseMode="parallax" />

            <!-- Course Title -->
            <TextView
                android:id="@+id/tv_ecfp_CourseTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/delagothicone_regular"
                android:text="Course Title"
                android:textColor="@color/white_soft"
                android:textSize="36dp"
                app:layout_collapseMode="pin" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Join Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_JoinCourse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/bricolage_condensed_semibold"
                android:text="Join Course"
                android:textSize="16sp"
                app:backgroundTint="@color/brand_emerald"
                app:cornerRadius="16dp"
                app:rippleColor="@color/brand_emerald_light"
                app:strokeColor="@color/brand_emerald_dark"
                app:strokeWidth="1dp" />

            <!-- Available Times Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/brand_emerald_light"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/textView145"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bricolage_grotesque_48pt_semi_bold"
                        android:text="Available Times"
                        android:textColor="@color/brand_emerald_dark"
                        android:textSize="18sp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_ecfp_availTimes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:minHeight="56dp"
                        android:orientation="horizontal"
                        android:overScrollMode="never"
                        tools:itemCount="2"
                        tools:listitem="@layout/day_time_viewholder" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Description Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/brand_emerald_light"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_DescriptionTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bricolage_grotesque_48pt_semi_bold"
                        android:text="Description"
                        android:textColor="@color/brand_emerald_dark"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_CourseDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/space_mono_regular"
                        android:text="@string/lorem_short"
                        android:textColor="@color/black_soft"
                        android:textSize="14sp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Teacher Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/brand_emerald_light"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_TeacherTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bricolage_grotesque_48pt_semi_bold"
                        android:text="Meet the Teacher"
                        android:textColor="@color/brand_emerald_dark"
                        android:textSize="18sp" />

                    <!-- Teacher Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/bg_card_surface"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/iv_TeacherPhoto"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:background="@drawable/bg_task_carousel"
                            android:contentDescription="@null"
                            android:padding="6dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/chalkboard_user" />

                        <TextView
                            android:id="@+id/tv_TeacherName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:fontFamily="@font/bricolage_condensed_semibold"
                            android:text="Teacher Name"
                            android:textColor="@color/black_soft"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <!-- About Teacher -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/bricolage_semicondensed_medium"
                        android:text="About the teacher"
                        android:textColor="@color/brand_emerald_dark"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_TeacherDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/space_mono_regular"
                        android:text="@string/lorem_short"
                        android:textColor="@color/black_soft"
                        android:textSize="14sp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Course Images Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/brand_emerald_light"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/textView116"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bricolage_grotesque_48pt_semi_bold"
                        android:text="Course Images"
                        android:textColor="@color/brand_emerald_dark"
                        android:textSize="22sp" />

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/vp_ecfp_courseImages"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:id="@+id/ll_ecfp_imageIndicators"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
