<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:strokeColor="#E0E0E0"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_status_badge"
                android:layout_width="44dp"
                android:layout_height="44dp"
                app:cardBackgroundColor="#F0F7F4"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <ImageView
                    android:id="@+id/iv_ftd_SubmissionStatus"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/pending"
                    app:tint="#00A86B"
                    tools:ignore="ContentDescription" />
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:orientation="horizontal"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_ftd_TaskTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Calculus II: Midterm Prep Assignment"
                        android:textColor="#2D3436"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:fontFamily="sans-serif-medium" />

                    <LinearLayout
                        android:id="@+id/ll_time_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView13"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            app:srcCompat="@drawable/clock_three"
                            app:tint="#7F8C8D"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:id="@+id/tv_ftd_TimeSubmission"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="11:59 PM"
                            android:textColor="#7F8C8D"
                            android:textSize="12sp"
                            tools:fontFamily="sans-serif" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_date_block"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:background="@drawable/bg_emerald_card"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="8dp">

                    <TextView
                        android:id="@+id/tv_ftd_monthSubmission"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0.05"
                        android:text="OCT"
                        android:textAllCaps="true"
                        android:textColor="#00A86B"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        tools:fontFamily="sans-serif-condensed" />

                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginVertical="4dp"
                        app:srcCompat="@drawable/calendar"
                        app:tint="#00A86B"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/tv_ftd_dateSubmission"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:text="24"
                        android:textAlignment="center"
                        android:textColor="#2D3436"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:fontFamily="sans-serif-black" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
