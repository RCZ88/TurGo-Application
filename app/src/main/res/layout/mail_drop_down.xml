<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/white_soft"
    app:cardCornerRadius="16dp"
    app:cardElevation="12dp"
    app:strokeColor="@color/brand_emerald_pale"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/brand_emerald_pale"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp">

            <TextView
                android:id="@+id/tv_MDD_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bricolage_grotesque_bold"
                android:letterSpacing="0.05"
                android:text="Inbox"
                android:textColor="@color/brand_emerald_dark"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_dialog_email"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/brand_emerald" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_MailDropDown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:maxHeight="350dp"
                android:minHeight="180dp"
                android:paddingTop="8dp"
                android:scrollbarThumbVertical="@color/brand_emerald_pale"
                android:scrollbars="vertical"
                tools:itemCount="3"
                tools:listitem="@layout/notif_small_display" />

            <LinearLayout
                android:id="@+id/ll_MDD_EmptyState"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="gone">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginBottom="12dp"
                    android:src="@android:drawable/ic_dialog_email"
                    app:tint="@color/brand_emerald_pale" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bricolage_body"
                    android:text="Inbox Empty"
                    android:textColor="@color/brand_emerald"
                    android:textSize="16sp" />
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <Button
                android:id="@+id/btn_ViewAllMail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_emerald_btn_outlined"
                android:fontFamily="@font/bricolage_grotesque_bold"
                android:text="View All Messages"
                android:textAllCaps="false"
                android:textColor="@color/brand_emerald"
                android:textSize="14sp"
                app:backgroundTint="@null" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>