<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frag_UserDetails"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface_inner_panel"
    android:fillViewport="true"
    tools:context=".signup_userdetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv_CwyCAcc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/dela_gothic_one_regular"
            android:text="Let's get to know you!"
            android:textAlignment="center"
            android:textColor="@color/brand_emerald_dark"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/tv_useBorM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/bricolage_body"
            android:text="Please fill in your details below"
            android:textAlignment="center"
            android:textColor="@color/brand_emerald"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_emerald_card"
            android:orientation="vertical"
            android:padding="20dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tl_FullName"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Full Name"
                android:textColorHint="#670B6E4F"
                app:boxBackgroundColor="@color/white_soft"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxStrokeColor="@color/brand_emerald"
                app:hintTextColor="@color/brand_emerald"
                app:startIconDrawable="@drawable/id_badge"
                app:startIconTint="@color/brand_emerald">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ti_FullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spacemono_regular"
                    android:inputType="text"
                    android:paddingStart="54dp"
                    android:textColor="@color/black_soft" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tl_Nickname"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Nickname"
                android:textColorHint="#670B6E4F"
                app:boxBackgroundColor="@color/white_soft"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxStrokeColor="@color/brand_emerald"
                app:hintTextColor="@color/brand_emerald"
                app:startIconDrawable="@drawable/id_card_clip_alt"
                app:startIconTint="@color/brand_emerald">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ti_Nickname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spacemono_regular"
                    android:inputType="text"
                    android:paddingStart="54dp"
                    android:textColor="@color/black_soft" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tl_DateOfBirth"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:hint="Date of Birth"
                android:textColorHint="#670B6E4F"
                app:boxBackgroundColor="@color/white_soft"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxStrokeColor="@color/brand_emerald"
                app:hintTextColor="@color/brand_emerald"
                app:startIconDrawable="@drawable/calendar"
                app:startIconTint="@color/brand_emerald">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ti_DateOfBirth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="false"
                    android:fontFamily="@font/spacemono_regular"
                    android:inputType="none"
                    android:paddingStart="54dp"
                    android:textColor="@color/black_soft" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_emerald_input"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/bricolage_grotesque_bold"
                    android:text="Gender"
                    android:textColor="@color/brand_emerald_dark"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bricolage_body"
                    android:text="Male"
                    android:textColor="@color/brand_emerald"
                    android:textSize="12sp" />

                <Switch
                    android:id="@+id/switch_Gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:minHeight="48dp"
                    android:thumbTint="@color/brand_emerald"
                    android:trackTint="@color/brand_emerald_pale" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bricolage_body"
                    android:text="Female"
                    android:textColor="@color/brand_emerald"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_emerald_input"
                android:orientation="vertical"
                android:paddingVertical="12dp">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/bricolage_grotesque_bold"
                    android:text="Latest Education"
                    android:textColor="@color/brand_emerald_dark"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/spin_LatEdu"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:backgroundTint="@color/brand_emerald"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>