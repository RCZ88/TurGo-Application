<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface_inner_panel"
    android:padding="10dp"
    tools:context=".ComposeMail">

    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dela_gothic_one_regular"
            android:text="New Message"
            android:textColor="@color/brand_emerald_dark"
            android:textSize="28sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bricolage_body"
            android:text="Draft your email to students or faculty"
            android:textColor="@color/brand_emerald"
            android:textSize="13sp" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="12dp"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@+id/ll_bottom_actions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/group_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_emerald_input"
                android:backgroundTint="#F2F7F6"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bricolage_condensed_semibold"
                    android:letterSpacing="0.1"
                    android:text="RECIPIENTS"
                    android:textColor="@color/brand_emerald_dark"
                    android:textSize="11sp" />

                <AutoCompleteTextView
                    android:id="@+id/actv_CM_To"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_emerald_input"
                    android:fontFamily="@font/bricolage_body"
                    android:hint="Search name or ID..."
                    android:paddingHorizontal="12dp"
                    android:textSize="14sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_CM_RecipientResults"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_inner_panel"
                    android:maxHeight="120dp"
                    android:padding="8dp"
                    android:scrollbars="vertical"
                    tools:itemCount="2"
                    tools:listitem="@layout/item_compose_recipient" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="10dp"
                    android:background="@color/brand_emerald_pale" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_CM_SelectedRecipients"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_card_surface"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:paddingBottom="0dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_compose_recipient"
                    tools:visibility="gone" />

                <LinearLayout
                    android:id="@+id/ll_CM_NoRecipientsSelected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_card_surface"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bricolage_body"
                        android:text="No recipients selected."
                        android:textColor="#667070"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/group_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_CM_Subject"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/bg_emerald_input"
                    android:fontFamily="@font/bricolage_condensed_semibold"
                    android:hint="Subject Line"
                    android:paddingHorizontal="16dp"
                    android:textColor="@color/brand_emerald_dark"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/bricolage_body"
                        android:text="Message Body"
                        android:textColor="#667070"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_emerald_input"
                        android:padding="2dp">

                        <ImageButton
                            android:id="@+id/ib_CM_Bold"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginHorizontal="4dp"
                            android:background="@drawable/bg_card_surface"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:padding="6dp"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/bold"
                            app:tint="@color/brand_emerald_dark" />

                        <ImageButton
                            android:id="@+id/ib_CM_Italic"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginHorizontal="4dp"
                            android:background="@drawable/bg_card_surface"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:padding="6dp"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/italic"
                            app:tint="@color/brand_emerald_dark" />

                        <ImageButton
                            android:id="@+id/ib_CM_Underline"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginHorizontal="4dp"
                            android:background="@drawable/bg_card_surface"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:padding="6dp"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/underline"
                            app:tint="@color/brand_emerald_dark" />
                    </LinearLayout>
                </LinearLayout>

                <EditText
                    android:id="@+id/etml_CM_Body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_emerald_input"
                    android:fontFamily="@font/bricolage_body"
                    android:gravity="start|top"
                    android:hint="Type your message here..."
                    android:inputType="textMultiLine"
                    android:minHeight="200dp"
                    android:padding="16dp"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/group_attachments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_emerald_input"
                android:backgroundTint="#F2F7F6"
                android:orientation="vertical"
                android:padding="12dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bricolage_condensed_semibold"
                        android:letterSpacing="0.1"
                        android:text="ATTACHMENTS"
                        android:textColor="@color/brand_emerald_dark"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/btn_CM_AddAttachment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/bricolage_grotesque_bold"
                        android:text="+ Add"
                        android:textColor="@color/brand_emerald"
                        android:textSize="12sp" />
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_CM_UploadedFiles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    tools:itemCount="2"
                    tools:listitem="@layout/submission_display" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/ll_bottom_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_CM_Draft"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_emerald_input"
            android:fontFamily="@font/bricolage_condensed_semibold"
            android:text="Draft"
            android:textAllCaps="false"
            android:textColor="@color/brand_emerald_dark" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_CM_Send"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="2"
            android:background="@drawable/bg_emerald_btn_primary"
            android:fontFamily="@font/dela_gothic_one_regular"
            android:text="Send Mail"
            android:textAllCaps="false"
            android:textColor="@color/white_soft" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
