<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_timeSlotCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="6dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white_soft"
    app:strokeColor="@color/brand_emerald"
    app:strokeWidth="0dp">

    <TextView
        android:id="@+id/tv_SingleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bricolage_body"
        android:gravity="center"
        android:paddingVertical="14dp"
        android:text="SUNDAY"
        android:textColor="@color/brand_emerald_dark"
        android:textSize="20sp"
        android:textStyle="bold" />

</com.google.android.material.card.MaterialCardView>