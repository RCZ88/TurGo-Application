<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface_inner_panel"
    tools:context=".RC_PrivateDurationAmount">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_emerald_card"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/textView39"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/bricolage_condensed_extrabold"
                    android:letterSpacing="0.05"
                    android:text="Schedule Type"
                    android:textAllCaps="true"
                    android:textColor="@color/brand_emerald"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/rg_PrivateGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radioButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:buttonTint="@color/brand_emerald"
                        android:fontFamily="@font/space_mono_regular"
                        android:paddingStart="12dp"
                        android:text="Only Private (Premium)"
                        android:textColor="@color/black_soft"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/radioButton2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:buttonTint="@color/brand_emerald"
                        android:fontFamily="@font/space_mono_regular"
                        android:paddingStart="12dp"
                        android:text="Only Group (Standard)"
                        android:textColor="@color/black_soft"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/radioButton3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/brand_emerald"
                        android:fontFamily="@font/space_mono_regular"
                        android:paddingStart="12dp"
                        android:text="Flexible (More Options)"
                        android:textColor="@color/black_soft"
                        android:textSize="16sp" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_emerald_card"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_SelectDuration"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/bricolage_condensed_extrabold"
                        android:letterSpacing="0.05"
                        android:text="Duration"
                        android:textAllCaps="true"
                        android:textColor="@color/brand_emerald"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_durationDisplay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_emerald_input"
                        android:fontFamily="@font/space_mono_regular"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:text="90 Minutes"
                        android:textColor="@color/brand_emerald_dark"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <SeekBar
                    android:id="@+id/sb_DurationSlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="8dp"
                    android:max="120"
                    android:min="30"
                    android:progressTint="@color/brand_emerald"
                    android:thumbTint="@color/brand_emerald" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30m"
                        android:textColor="@color/brand_emerald_pale"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="120m"
                        android:textColor="@color/brand_emerald_pale"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_emerald_card"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView42"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/bricolage_condensed_extrabold"
                        android:letterSpacing="0.05"
                        android:text="SESSIONS PER WEEK"
                        android:textAllCaps="true"
                        android:textColor="@color/brand_emerald"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_AmtDisplay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_emerald_input"
                        android:fontFamily="@font/space_mono_regular"
                        android:gravity="center"
                        android:minWidth="60dp"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:text="1 / 3"
                        android:textColor="@color/brand_emerald"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <SeekBar
                    android:id="@+id/sb_AmountPerWeek"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="8dp"
                    android:max="5"
                    android:progress="1"
                    android:progressBackgroundTint="@color/brand_emerald_dark"
                    android:progressTint="@color/brand_emerald"
                    android:splitTrack="false"
                    android:thumbTint="@color/brand_emerald_dark" />

                <TextView
                    android:id="@+id/tv_SessionLimitInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bricolage_body"
                    android:text="Based on 3 available slots for 1hr duration."
                    android:textColor="@color/brand_emerald"
                    android:textSize="12sp"
                    android:textStyle="italic" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>