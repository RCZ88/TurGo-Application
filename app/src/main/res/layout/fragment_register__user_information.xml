<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/form_bg"
    tools:context=".RC_UserInformation">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/bg_emerald_card"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/textView49"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/bricolage_condensed_semibold"
                    android:letterSpacing="0.05"
                    android:text="School"
                    android:textAllCaps="true"
                    android:textColor="@color/brand_emerald"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_SchoolNameInput"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_emerald_input"
                    android:fontFamily="@font/space_mono_regular"
                    android:hint="Enter school name"
                    android:inputType="text"
                    android:textColor="@color/black_soft"
                    android:textColorHint="#670B6E4F"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView50"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/bricolage_condensed_semibold"
                    android:letterSpacing="0.05"
                    android:text="Education Level"
                    android:textAllCaps="true"
                    android:textColor="@color/brand_emerald"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_EducationStudent"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_emerald_input"
                    android:fontFamily="@font/space_mono_regular"
                    android:hint="(e.g. Grade 5)"
                    android:inputType="text"
                    android:textColor="@color/black_soft"
                    android:textColorHint="#670B6E4F"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btn_saveToProfile"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/bg_emerald_btn_primary"
                            android:fontFamily="@font/bricolage_subheading"
                            android:text="Save"
                            android:textAllCaps="false"
                            android:textColor="@color/white_soft"
                            android:textSize="16sp"
                            app:backgroundTint="@null" />

                        <TextView
                            android:id="@+id/textView40"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Save for later"
                            android:textAlignment="center"
                            android:textColor="@color/brand_emerald"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <Space
                        android:layout_width="16dp"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <Button
                            android:id="@+id/btn_rui_autofill"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:background="@drawable/bg_emerald_btn_outlined"
                            android:fontFamily="@font/bricolage_condensed_regular"
                            android:text="Autofill"
                            android:textAllCaps="false"
                            android:textColor="@color/brand_emerald"
                            android:textSize="14sp"
                            app:backgroundTint="@null" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/bg_emerald_card"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/textView51"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:letterSpacing="0.05"
                    android:text="Reason for joining"
                    android:textAllCaps="true"
                    android:textColor="@color/brand_emerald"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etml_ReasonForJoining"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:background="@drawable/bg_emerald_input"
                    android:fontFamily="@font/space_mono_regular"
                    android:gravity="start|top"
                    android:hint="Why do you want to join?"
                    android:inputType="textMultiLine"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:textColor="@color/black_soft"
                    android:textColorHint="#670B6E4F"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>