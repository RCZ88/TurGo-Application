<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_TVH_CourseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:text="Course Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_TVH_StudentCount"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="28dp"
        android:text="1 Student"
        app:layout_constraintStart_toEndOf="@+id/tv_TVH_CourseName"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="70dp">

        <TextView
            android:id="@+id/textView120"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20sp"
            android:text="Next Schedule" />

        <TextView
            android:id="@+id/tv_TVH_NextScheduleTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="29/10/2025 6:30pm" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>