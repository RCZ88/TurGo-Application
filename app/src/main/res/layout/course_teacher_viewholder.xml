<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="12dp"
    android:background="@drawable/bg_emerald_card_accent"
    android:elevation="4dp"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_TVH_CourseName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bricolage_grotesque_bold"
        android:text="Mathematics 101"
        android:textColor="@color/brand_emerald_dark"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/chip_student_wrapper"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/chip_student_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_emerald_input"
        android:gravity="center_vertical"
        android:paddingHorizontal="10dp"
        android:paddingVertical="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_TVH_CourseName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_TVH_CourseName">

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@android:drawable/ic_menu_my_calendar"
            app:tint="@color/brand_emerald"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_TVH_StudentCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:fontFamily="@font/bricolage_body"
            android:text="12 Students"
            android:textColor="@color/brand_emerald_dark"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="#1A064E3B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_TVH_CourseName" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:fontFamily="@font/bricolage_grotesque_bold"
            android:text="Next Class:"
            android:textColor="@color/brand_emerald"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_TVH_NextScheduleTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bricolage_body"
            android:text="Oct 29 â€¢ 6:30 PM"
            android:textColor="@color/black_soft"
            android:textSize="14sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>