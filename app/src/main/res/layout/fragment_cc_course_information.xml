<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface_inner_panel"
    android:fillViewport="true"
    tools:context=".cc_CourseInformation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/dela_gothic_one_regular"
            android:text="Course Details"
            android:textColor="@color/brand_emerald_dark"
            android:textSize="28sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/bricolage_body"
            android:text="Fill in the basic information below to identify your course."
            android:textColor="@color/brand_emerald"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card_surface"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/bricolage_condensed_semibold"
                    android:letterSpacing="0.05"
                    android:text="COURSE NAME"
                    android:textColor="@color/brand_emerald_dark"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_emerald_input"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/book"
                        app:tint="@color/brand_emerald"
                        android:contentDescription="icon" />

                    <EditText
                        android:id="@+id/et_CC_courseName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="12dp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/bricolage_body"
                        android:hint="e.g. Advanced Calculus"
                        android:inputType="textCapWords"
                        android:textColor="@color/brand_emerald_dark"
                        android:textColorHint="#99A3A4"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/bricolage_condensed_semibold"
                    android:letterSpacing="0.05"
                    android:text="COURSE TYPE"
                    android:textColor="@color/brand_emerald_dark"
                    android:textSize="12sp" />

                <Spinner
                    android:id="@+id/sp_CC_CourseType"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_emerald_input"
                    android:paddingHorizontal="16dp"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/bricolage_condensed_semibold"
                    android:letterSpacing="0.05"
                    android:text="DESCRIPTION"
                    android:textColor="@color/brand_emerald_dark"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/etml_CC_CourseDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_emerald_input"
                    android:fontFamily="@font/bricolage_body"
                    android:gravity="top|start"
                    android:hint="Briefly describe what students will learn..."
                    android:inputType="textMultiLine"
                    android:minLines="5"
                    android:padding="16dp"
                    android:textColor="@color/brand_emerald_dark"
                    android:textColorHint="#99A3A4"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>