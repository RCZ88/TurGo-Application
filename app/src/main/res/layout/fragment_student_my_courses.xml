<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface_inner_panel"
    android:fillViewport="true"
    tools:context=".Student_MyCourses">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_emerald_card"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="14dp"
            android:paddingTop="12dp"
            android:paddingEnd="14dp"
            android:paddingBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dela_gothic_one_regular"
                android:text="My Courses"
                android:textColor="@color/brand_emerald_dark"
                android:textSize="26dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/bricolage_body"
                android:text="Courses you are currently enrolled in"
                android:textColor="@color/brand_emerald"
                android:textSize="12sp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_ListOfMyCourses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"
            android:clipToPadding="false"
            android:paddingBottom="8dp"
            android:nestedScrollingEnabled="false"
            tools:itemCount="2"
            tools:listitem="@layout/course_display" />

        <LinearLayout
            android:id="@+id/ll_smc_EmptyState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:background="@drawable/bg_emerald_card"
            android:elevation="4dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="32dp">

            <TextView
                android:id="@+id/tv_smc_NoCoursesJoined"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/bricolage_body"
                android:text="No courses joined yet!"
                android:textAlignment="center"
                android:textColor="@color/brand_emerald_dark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_smc_NavigateExploreCourse"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_emerald_btn_primary"
                android:fontFamily="@font/bricolage_grotesque_bold"
                android:text="Explore Courses"
                android:textAllCaps="false"
                android:textColor="@color/white_soft"
                android:textSize="16sp"
                app:backgroundTint="@null" />

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
