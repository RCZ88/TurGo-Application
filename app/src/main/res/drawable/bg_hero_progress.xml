<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="@color/white"/>

    <!-- Rounded corners -->
    <corners android:radius="20dp"/>

    <!-- Optional shadow / elevation effect using stroke -->
    <stroke
        android:width="1dp"
        android:color="@color/brand_emerald_light"/>

    <!-- Optional gradient for nicer look -->
    <!-- Uncomment if you want gradient instead of solid color -->
    <gradient
        android:startColor="@color/brand_emerald_pale"
        android:endColor="@color/brand_emerald_light"
        android:angle="270"/>
</shape>
