<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".TurgoApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/turgo_applogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/turgo_applogo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TurGo"
        tools:targetApi="31">
        <activity
            android:name=".DataLoading"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".AdminCreateCourse"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AdminScreen"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ActivityLauncher"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ComposeMail"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TeacherScreen"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CreateCourse"
            android:exported="false"
            android:theme="@style/Theme.TurGo"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MailPageFull"
            android:exported="false"
            android:label="@string/title_activity_mail_page_full"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MailExpandFull"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RegisterCourse"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".StudentScreen"
            android:exported="false"
            android:label="@string/title_activity_student_screen"
            android:screenOrientation="portrait" /> <!-- Your Activities -->
        <activity
            android:name=".SignUpPage"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SignInPage"
            android:exported="false"
            android:theme="@style/Theme.TurGo"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:exported="true" /> <!-- Firebase and Google Play Services Integration -->
        <activity
            android:name=".CaptureAct"
            android:screenOrientation="portrait"
            android:stateNotNeeded="true"
            android:theme="@style/zxing_CaptureTheme" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" /> <!-- Optional: Preloaded Fonts -->
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>